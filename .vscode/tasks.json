{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "taskName": "Sass Compile",
            "type": "shell",
            "command": "sass --watch assets/scss/:assets/css --style compact",
            "group": "build"
        },
        {
            "taskName": "Jekyll Serve",
            "type": "shell",
            "command": "jekyll serve",
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}